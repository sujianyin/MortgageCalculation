page {
  background: #fff;
  font-size: 30rpx;
}

.arrow {
  display :inline-block;
  position: relative;
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-top: -4px;
}

.arrow::after {
  display: inline-block;
  content: " ";
  height: 18rpx;
  width: 18rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #999;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  right: 6rpx;
  margin-top: -9rpx;
}

.choose {
  color: #36c5f7;
}

.content {
  border-bottom: 10rpx solid #f5f5f5;
}
.item {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #f5f5f5;
}
.item .picker{
  width: 100%;
}
.item .picker-item{
  width: 100%;
  display: flex;
  justify-content: space-between;

}
.items {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
.top {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
}
.item-r {
  display: flex;
  flex-direction: row;
  flex: 1;
}

.input {
  text-align: right;
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  margin-right: 10rpx;
}

.unit {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.unit image {
  display: block;
  width: 20rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.item-r {
  position: relative;
}
.radio-box {
  position: absolute;
  right: 0;
}
radio {
  transform: scale(0.7);
}

.slider {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
}

.slider slider {
  flex: 1;
  margin: 0 10rpx 0 30rpx;
}

.btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin: 30rpx;
  text-align: center;
  background: #36c5f7;
  color: #fff;
  border-radius: 10rpx;
}

.descript-box {
  padding: 20rpx 0 30rpx 0;
}
